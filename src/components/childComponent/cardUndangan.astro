---
import { Icon } from "astro-icon/components"
const{
    title,
    time,
    day,
    location,
    locationDetail
} = Astro.props

---
 <div class="flex flex-col items-center justify-center p-3 border-2 backdrop-blur-md rounded-lg  border-sky-800">
            <h1 class="text-3xl text-sky-800 font-great my-5">{title}</h1>
            <span class="text-sm font-bold text-sky-800">{day}</span>
            <span class="text-sm">{time}</span>
            <p class="text-sm">{location}</p>
            <p class="text-sky-800 flex text-sm md:text-base flex-col justify-center items-center mt-5 gap-2 text-center"><Icon name="mdi:map-marker" class="text-sky-800" size={34}/> {locationDetail} </p>
            <button class="border-2 my-5 border-sky-800 px-5 py-1 bg-sky-800 text-slate-200 lg:hover:bg-sky-800 lg:hover:text-slate-200 rounded-md lg:opacity-50 lg:hover:opacity-100 transition duration-300 transform hover:-translate-y-1 text-sm">Google Map</button>
        </div>